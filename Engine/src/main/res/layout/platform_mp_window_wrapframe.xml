<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <include
        android:id="@+id/platform_mp_window_title_bar"
        android:layout_height="45dip"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        layout="@layout/platform_mp_window_title_bar"
        />
    <LinearLayout
        android:id="@+id/platform_mp_window_bounceview_wrapper"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/platform_mp_window_title_bar"
        android:layout_above="@+id/platform_mp_window_bottom_bar"
        >
    </LinearLayout>
    <include
        android:id="@+id/platform_mp_window_bottom_bar"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        layout="@layout/platform_mp_window_bottom_bar"
        />
</RelativeLayout>