<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/platform_mp_window_item_bg_noborder_selector"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/platform_mp_window_pop_item_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dip"
        android:text="菜单项"
        android:textColor="@color/platform_mp_window_gray_black"
        android:textSize="14sp" />

    <View
        android:id="@+id/platform_mp_window_pop_item_line"
        android:layout_width="match_parent"
        android:layout_height="0.0005dip"
        android:background="@color/platform_mp_window_border_color" />

</LinearLayout>